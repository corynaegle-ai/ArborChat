<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors for Dark Theme -->
    <Color x:Key="Primary">#673AB7</Color> <!-- Deep Purple -->
    <Color x:Key="PrimaryDark">#4527A0</Color> <!-- Darker Purple -->
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color> <!-- White text for dark backgrounds -->

    <!-- Secondary Colors for Dark Theme -->
    <Color x:Key="Secondary">#BBDEFB</Color> <!-- Light Blue Accent -->
    <Color x:Key="SecondaryDarkText">#212121</Color> <!-- Dark text for light backgrounds -->

    <!-- Tertiary Accent Color -->
    <Color x:Key="Tertiary">#00BCD4</Color> <!-- Cyan/Teal Accent -->

    <!-- Neutral Colors for Dark Theme -->
    <Color x:Key="Background">#1A1A1A</Color> <!-- Very Dark Gray -->
    <Color x:Key="Surface">#282828</Color> <!-- Dark Gray for cards, etc. -->
    <Color x:Key="OnPrimary">#FFFFFF</Color>
    <Color x:Key="OnSecondary">#000000</Color>
    <Color x:Key="OnTertiary">#000000</Color>
    <Color x:Key="OnBackground">#FFFFFF</Color>
    <Color x:Key="OnSurface">#E0E0E0</Color>

    <!-- Specific UI Element Colors -->
    <Color x:Key="Transparent">#00FFFFFF</Color>
    <Color x:Key="Accent">#7B1FA2</Color> <!-- Another purple shade for highlights -->

    <!-- Text Colors -->
    <Color x:Key="LightTextColor">#FFFFFF</Color>
    <Color x:Key="DarkTextColor">#000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkTextBrush" Color="{StaticResource PrimaryDarkText}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryDarkTextBrush" Color="{StaticResource SecondaryDarkText}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimary}"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="{StaticResource OnSecondary}"/>
    <SolidColorBrush x:Key="OnTertiaryBrush" Color="{StaticResource OnTertiary}"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource OnBackground}"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurface}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightTextColor}"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="{StaticResource DarkTextColor}"/>

</ResourceDictionary>