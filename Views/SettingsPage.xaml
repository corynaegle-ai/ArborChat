<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ArborChat.ViewModels"
             x:Class="ArborChat.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings"
             BackgroundColor="#1E1E1E"> <!-- Dark theme background -->
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="AI API Settings" FontSize="Title" TextColor="White" />

        <Frame BackgroundColor="#333333" CornerRadius="10" Padding="15">
            <VerticalStackLayout Spacing="10">
                <Label Text="OpenAI API Key" TextColor="White" />
                <Entry Placeholder="Enter your OpenAI API Key"
                       PlaceholderColor="#AAAAAA"
                       TextColor="White"
                       BackgroundColor="#444444"
                       ClearButtonVisibility="WhileEditing"
                       Text="{Binding OpenAIKey}" />
            </VerticalStackLayout>
        </Frame>

        <Frame BackgroundColor="#333333" CornerRadius="10" Padding="15">
            <VerticalStackLayout Spacing="10">
                <Label Text="Gemini API Key" TextColor="White" />
                <Entry Placeholder="Enter your Gemini API Key"
                       PlaceholderColor="#AAAAAA"
                       TextColor="White"
                       BackgroundColor="#444444"
                       ClearButtonVisibility="WhileEditing"
                       Text="{Binding GeminiKey}" />
            </VerticalStackLayout>
        </Frame>

        <Label Text="Selected AI Model" FontSize="Medium" TextColor="White" />
        <Picker Title="Select an AI Model"
                TitleColor="#AAAAAA"
                BackgroundColor="#444444"
                TextColor="White"
                SelectedItem="{Binding SelectedAIModel}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>ChatGPT</x:String>
                    <x:String>Gemini</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Save Settings"
                BackgroundColor="#007ACC"
                TextColor="White"
                CornerRadius="10"
                Command="{Binding SaveSettingsCommand}" />
    </VerticalStackLayout>
</ContentPage>